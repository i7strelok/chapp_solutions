{% extends 'base.html.twig' %}

{% block title %}Listado de etiquetas{% endblock %}

{% block body %}
    <div class="container">
        <div class="table-responsive-sm justify-content-center mt-5 table-borderless">
            <div class="row mb-5">
                <div class="col-auto" style="padding-top: 10px">
                    <legend class="verde-t mb4 h3">Listado de etiquetas</legend>
                </div>
                <div class="col">
                    <a href="{{ path('app_etiqueta_new') }}" class="btn button-color text-white float-right" title="Añadir una nueva habitación.">Crear nueva</a>
                </div>
                <div class="col-12 mt-sm-n2 mt-md-n2 mt-lg-n3" >
                    <hr class="line-setting">
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr class ="header-table-color text-white">
                        <td>Id</td>
                        <td>Nombre</td>
                        <td>Descripción</td>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for etiqueta in etiquetas %}
                        <tr>
                            <td>{{ etiqueta.id }}</td>
                            <td>{{ etiqueta.nombre}}</td>
                            <td>{{ etiqueta.descripcion ? etiqueta.descripcion : '' }}</td>
                            <td class="p-1 align-middle">
                                <div>
                                    <a href="{{ path('app_etiqueta_show', {'id': etiqueta.id}) }}" class="btn btn-sm button-color text-white" 
                                        data-toggle="tooltip" data-placement="bottom" title="Visualizar">
                                        <i class="material-icons mic">visibility</i>
                                    </a>
                                    <a href="{{ path('app_etiqueta_edit', {'id': etiqueta.id}) }}" class="btn btn-sm button-color text-white" 
                                        data-toggle="tooltip" data-placement="bottom" title="Editar">
                                        <i class="material-icons mic">edit</i>
                                    </a>
                                    {{ include('etiqueta/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No hay etiquetas para ver.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {# display navigation #}
            <div class="d-flex justify-content-center">
                <div class="navigation">
                    {{ knp_pagination_render(etiquetas) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
