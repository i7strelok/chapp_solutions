    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Descripcion</th>
                <th>Capacidad</th>
                <th>Precio_diario</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for habitacion in habitacions %}
            <tr>
                <td>{{ habitacion.id }}</td>
                <td>{{ habitacion.numero }}</td>
                <td>{{ habitacion.descripcion }}</td>
                <td>{{ habitacion.capacidad }}</td>
                <td>{{ habitacion.precioDiario }}</td>
