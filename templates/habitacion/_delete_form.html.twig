<form method="post" action="{{ path('app_habitacion_delete', {'id': habitacion.id}) }}" onsubmit="return confirm('¿Seguro que desea eliminar esta habitación?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ habitacion.id) }}">
    <button class="btn btn-sm button-color text-white">
        <i class="material-icons mic">delete</i>
    </button>
</form>
