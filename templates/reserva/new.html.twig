{% extends 'base.html.twig' %}

{% block title %}Nueva reserva{% endblock %}
{% block javascripts %} 
    <script src="/js/js-datepicker.js"></script>
{% endblock %}
{% block body %}
    {% for message in app.flashes('exito') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-canter">
            <div class = "col-6 bg-white rounded my-3 p-5">
                <a href="{{ path('app_reserva_filter') }}" class="btn btn-sm button-color text-white" 
                    data-toggle="tooltip" data-placement="bottom" title="Regresar al buscador de habitaciones">
                        <i class="material-icons mic">arrow_back</i>
                </a>
                <h1>Confirmar reserva</h1>
                {{ include('reserva/_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}